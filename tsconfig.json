{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": false,
    "noImplicitAny": false,
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/content/*": ["src/content/*"],
      "@/images/*": ["src/images/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/schema/*": ["src/schema/*"],
      "@/styles/*": ["src/styles/*"],
      "@/types/*": ["src/types/*"],
    },
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "ES2022",
    "types": [
      "astro/client",
      "vitest/globals"
    ],
    "verbatimModuleSyntax": true
  },
  "exclude": ["dist"],
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"]
}
