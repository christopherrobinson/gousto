---
import { type BreadcrumbsProps } from '@/types/Breadcrumbs';

const { items } = Astro.props as BreadcrumbsProps;
---

<div class="bg-secondary-50  border-b  border-secondary-100  py-4  text-sm  lg:py-6  print:hidden">
  <Container>
    <nav aria-label="Breadcrumb">
      <ol class="flex  space-x-2">
        {items.map((item, index) => (
          <li class="hidden  items-center  [&:nth-last-child(2)]:flex  md:flex">
            <span class="me-2  md:hidden"><Icon class="size-2.5" name="chevron-left" /></span>
            <a class="hover:underline" href={item.href}>
              {item.label}
            </a>
            {index < items.length - 1 && (
              <span class="hidden  ms-2  md:block"><Icon class="size-2.5" name="chevron-right" /></span>
            )}
          </li>
        ))}
      </ol>
    </nav>
  </Container>
</div>
