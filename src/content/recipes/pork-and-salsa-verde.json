  "cooking_instructions": [
    {
      "instruction": "<p><strong>Preheat</strong> the oven to 220&deg;C/ 200&deg;C (fan)/ 425&deg;F/ Gas 7</p>",
      "order": 1,
      "image": "/images/instructions/pork-and-salsa-verde/step-1.jpg"
    },
    {
      "instruction": "<p><strong>Cut</strong> the pepper<span class=\"text-danger\">(s)</span> in half and discard the pith and seeds</p>\r\n<p><strong>Dice</strong> the tomato<span class=\"text-danger\">(es)</span> and place inside the pepper halves</p>",
      "order": 2,
      "image": "/images/instructions/pork-and-salsa-verde/step-2.jpg"
    },
    {
      "instruction": "<p><strong>Place</strong> the stuffed peppers in an oven-proof dish</p>\r\n<p><strong>Drizzle</strong> the tomato with the red wine vinegar, 1/2-1 tbsp of olive oil and season generously with salt and pepper</p>\r\n<p><strong>Put</strong>&nbsp;them in the oven for 30 min or until tender</p>",
      "order": 3,
      "image": "/images/instructions/pork-and-salsa-verde/step-3.jpg"
    },
    {
      "instruction": "<p><strong>Cut</strong> the potatoes into thin slices (approx. 1/2cm)</p>\r\n<p><strong>Place</strong> on an oven-proof tray</p>\r\n<p><strong>Coat</strong> well with 1-2 tbsp of olive oil and season generously with salt and pepper</p>\r\n<p><strong>Put</strong>&nbsp;them in the oven for 20 min or until golden, turning once</p>",
      "order": 4,
      "image": "/images/instructions/pork-and-salsa-verde/step-4.jpg"
    },
    {
      "instruction": "<p><strong>Meanwhile</strong>, chop the parsley coarsely including the stalks</p>\r\n<p><strong>Crush</strong> the garlic with the side of a knife, peel and chop coarsely</p>",
      "order": 5,
      "image": "/images/instructions/pork-and-salsa-verde/step-5.jpg"
    },
    {
      "instruction": "<p><strong>Combine</strong> the parsley, garlic and 4 tbsp <span class=\"text-danger\">(8 tbsp)</span>&nbsp;olive oil with a (stick) blender for the salsa verde</p>\r\n<p><strong>Season</strong>&nbsp;generously with salt and pepper</p>\r\n<p>Tip: For a lighter version replace the&nbsp;oil with&nbsp;water</p>",
      "order": 6,
      "image": "/images/instructions/pork-and-salsa-verde/step-6.jpg"
    },
    {
      "instruction": "<p><strong>Season</strong> the pork steaks on both sides with salt and pepper</p>\r\n<p><strong>Add</strong> 1-2 tbsp vegetable oil to a pan on a medium-high heat</p>\r\n<p><strong>Once</strong> the oil is hot, add the pork and cook for 3 min on each side or until cooked through</p>",
      "order": 7,
      "image": "/images/instructions/pork-and-salsa-verde/step-7.jpg"
    },
    {
      "instruction": "<p><strong>Serve</strong> the potatoes and stuffed peppers with the pork</p>\r\n<p><strong>Drizzle</strong> the pork with the salsa verde</p>\r\n<p>Enjoy!</p>",
      "order": 8
    }
