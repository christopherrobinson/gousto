---
import { GOUSTO_REFERRAL_CODE } from 'astro:env/client';
import Allergens from '@/components/Allergens.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import Container from '@/components/Container.astro';
import Ingredients from '@/components/Ingredients.astro';
import NutritionalInformation from '@/components/NutritionalInformation.astro';
import Layout from '@/layouts/Default.astro';

export const getStaticPaths = async () => {
  const pages = await getRecipes();

  return pages.map((page) => ({
    params: {
      slug: page.id,
    },
    props: { page },
  }));
}

const { page } = Astro.props;
const { data } = page;
const { allergens, basics, cooking_instructions, cuisine, description, image, nutritional_information, portion_sizes, prep_times, rating, title } = data;
const { per_portion } = nutritional_information;
const { for_2 } = prep_times;
const ingredientsFor2 = data.ingredients.filter(ingredient => portion_sizes?.find(p => p.portions === 2)?.ingredients_skus?.map(sku => sku.id)?.includes(ingredient.gousto_uuid));
const ingredients = ingredientsFor2.length > 0 && ingredientsFor2 || data.ingredients;
---

<Layout>
  <Breadcrumbs
    items={[
      { label: 'Recipes', href: '/recipes/' },
      { label: title, href: `/recipes/${page.id}/` },
    ]}
  />
  <Container>
    <div class="gap-4  grid  grid-cols-1  mb-8  md:gap-8  md:grid-cols-12">
      <div class="col-span-1  md:col-span-5  lg:col-span-6">
        <Image alt={title} class="h-auto  rounded-lg  w-full" height={1000} src={useRemoteImageUrl(image)} width={1000} />
      </div>
      <div class="col-span-1  md:col-span-7  lg:col-span-6">
        <h2 class="font-semibold  font-serif  leading-16  mb-8  text-5xl">{title}</h2>
        <p class="mb-8  text-secondary-800">{description}</p>
        <div class="flex  items-center  mb-8  overflow-hidden  space-x-8  text-sm  text-center  text-secondary-800">
          {for_2 &&
            <div class="flex  items-center  space-x-2">
              <Icon name="stopwatch" /> <span>{for_2} mins</span>
            </div>
          }
          {rating?.average &&
            <div class="flex  items-center  space-x-2">
              <Icon name="star" /> <span>{rating.average.toFixed(1)}</span>
            </div>
          }
          {cuisine &&
            <a class="flex  group  items-center  space-x-2" href={`/recipes/cuisine/${createSlug(cuisine)}/`}>
              <Icon name="globe" /> <span class="transition  group-hover:text-primary-600  group-hover:underline">{cuisine}</span>
            </a>
           }
        </div>
        <div>
          <a
            class="animate-pulse  bg-tertiary-600  flex  flex-col  font-medium  items-center  px-6  py-3  rounded-lg  text-white  transition  hover:animate-none  hover:bg-tertiary-800"
            href={`https://www.gousto.co.uk/raf/?promo_code=${GOUSTO_REFERRAL_CODE}`}
          >
            <span class="text-xl">Try Gousto now</span>
            <span class="font-medium  opacity-90  text-md">Get 60% off your first box</span>
          </a>
        </div>
      </div>
    </div>
    <div class="border-b  border-secondary-100  gap-4  grid  grid-cols-1  mb-8  pb-8  md:gap-8  md:grid-cols-12">
      <div class="col-span-1  md:col-span-5  lg:col-span-4">
        <div class="md:sticky  md:top-[107px]">
          <Ingredients basics={basics} ingredients={ingredients} />
          <a
            class="animate-pulse  bg-tertiary-600  hidden  flex-col  font-medium  items-center  mt-8  px-6  py-3  rounded-lg  text-white  transition  md:flex  hover:animate-none  hover:bg-tertiary-800"
            href={`https://www.gousto.co.uk/raf/?promo_code=${GOUSTO_REFERRAL_CODE}`}
          >
            <span class="text-xl">Try Gousto now</span>
            <span class="font-medium  opacity-90  text-md">Get 60% off your first box</span>
          </a>
        </div>
      </div>
      <div class="col-span-1  md:col-span-7  lg:col-span-8">
        <h2 class="font-semibold  font-serif  mb-2  text-3xl">Cooking instructions</h2>
        <p class="text-secondary-800  mb-8">Instructions for 2 <span class="text-purple">[for 3]</span> <span class="text-danger">[for 4]</span> portion recipe.</p>
        {cooking_instructions
          .sort((a, b) => a.order - b.order)
          .map(({ image, instruction, order }, i) => (
            <div class="flex  relative  space-x-8">
              <div class="flex  flex-col  items-center">
                <div class="bg-primary-600  flex  items-center  justify-center  font-serif  rounded-full  size-12  text-white">
                  {order}.
                </div>
                {(i < (cooking_instructions.length - 1)) && (
                  <div class="bg-primary-600  flex-1  w-px"></div>
                )}
              </div>
              <div class={`${(i < (cooking_instructions.length - 1)) ? `border-b  border-secondary-100  mb-8  pb-8  ` : ``}space-x-8  w-full  lg:flex`}>
                <div class={`max-w-none  ${image ? `mb-8  ` : ``}prose  w-full  md:prose-md  lg:mb-0`} set:html={instruction} />
                {image &&
                  <div class="w-full  lg:w-1/3">
                    <Image alt={`Step ${order}`} class="w-full" height={375} src={useRemoteImageUrl(image)} width={500} />
                  </div>
                }
              </div>
            </div>
          )
        )}
      </div>
    </div>
    <NutritionalInformation perPortion={per_portion} />
    <Allergens allergens={allergens} />
  </Container>
  <div class="bg-secondary-100  py-16  text-sm  text-center">
    <Container>
        <h2 class="font-semibold  font-serif  leading-16  mb-4  text-3xl">
          The Recipe Box with More Delicious Choices Than Ever!
        </h2>
        <ul class="mb-8  text-lg">
          <li class="mb-4">
            <strong class="font-medium">500+ tasty recipes every month</strong> &mdash; there's always something new to try!
          </li>
          <li class="mb-4">
            <strong class="font-medium">185+ veggie & vegan options</strong> every month too &mdash; plenty for plant-based foodies!
          </li>
          <li class="mb-4">
            <strong class="font-medium">No commitments!</strong> Skip, swap, or cancel anytime, hassle-free.
          </li>
        </ul>
        <a
          class="animate-pulse  bg-tertiary-600  font-medium  hidden  items-center  px-6  py-3  rounded-xl  text-white  transition  md:inline-block  hover:animate-none  hover:bg-tertiary-800"
          href={`https://www.gousto.co.uk/raf/?promo_code=${GOUSTO_REFERRAL_CODE}`}
        >
          <span class="text-lg">View the full menu now</span>
        </a>
    </Container>
  </div>
</Layout>
